%{
#include <stdio.h>
#include <stdlib.h>
#include "y.tab.h"
%}

%%
[0-9]+      { yylval.ival = atoi(yytext); return NUMBER; }
"+"         { return ADD; }
"-"         { return SUB; }
"*"         { return MUL; }
"/"         { return DIV; }
" "         { /* Ignore spaces */ }
"\n"        { return EOL; }
.           { fprintf(stderr, "Invalid character: %s\n", yytext); exit(1); }
%%

int yywrap() {
    return 1;
}